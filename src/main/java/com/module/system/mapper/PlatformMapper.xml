<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="com.module.system.dao.PlatformDao">  
     
    <insert id="insertPlatform" parameterType="Platform">  
        insert into platform (
        	name
        ) values(
        	#{name}
        )  
    </insert>  
    
    <update id="updatePlatform" parameterType="Platform">  
        update platform
        	<set>
        		<if test="name !=null and name !=''">
					name = #{name},
        		</if>
        	</set>
        where id = #{id}   
    </update>  
    
    <delete id="deletePlatformById" parameterType="int">  
        delete from platform where id = #{id}  
    </delete>  
       
    <select id="getPlatformById" parameterType="int" resultType="Platform">  
        select * from platform where id = #{id}  
    </select>
    
    <select id="getPlatformList" resultType="User">  
        select * from platform  
    </select>  
    
    <select id="getPlatformByName" resultType="Platform" parameterType="string">
    	select * from platform where name = #{name}
    </select>
    
</mapper>  